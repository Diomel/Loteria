<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lot.loteria.loteria.RegisterActivity">

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etName"
        android:layout_width="384dp"
        android:hint="Name"
        android:layout_height="53dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <EditText
        android:layout_width="384dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etUsername"
        android:hint="Username"
        android:layout_height="53dp"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        app:layout_constraintRight_toRightOf="@+id/etName" />

    <EditText
        android:layout_width="384dp"
        android:layout_height="53dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@+id/etUsername"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/etName" />

    <EditText
        android:layout_width="384dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etAge"
        android:layout_height="53dp"
        android:hint="Age"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        app:layout_constraintRight_toRightOf="@+id/etUsername" />

    <Button
        android:text="Register"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:id="@+id/bRegitster"
        app:layout_constraintTop_toBottomOf="@+id/etAge"
        app:layout_constraintRight_toRightOf="@+id/etAge" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="0dp"
        app:relativeBegin="20dp" />
</android.support.constraint.ConstraintLayout>
